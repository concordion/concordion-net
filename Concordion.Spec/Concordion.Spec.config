<?xml version="1.0" encoding="utf-8" ?>
<Specification>
  <!-- use to define alternative path to specification documents - default = your test DLL -->
  <BaseInputDirectory path="../../../../doc"/>
  
  <!-- use to define alternative output path for Concordion test reports - default = temp directory defined by environment variable %TEMP%
  <BaseOutputDirectory path="C:\Temp" />
  -->

  <!-- use to define file extensions of your specification documents - default = html -->
  <SpecificationFileExtensions>
    <FileExtension name="html" />
    <FileExtension name="xhtml" />
  </SpecificationFileExtensions>

  <!-- use to define test runner class for the Concordion run command - default = Concordion.Spec.Concordion.Command.Run.RunTestRunner
  <Runners>
    <Runner alias="runtestrunner" type="Concordion.Spec.Concordion.Command.Run.RunTestRunner, Concordion.Spec, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null" />
  </Runners>
  -->

  <!-- use to define Concordion Extensions to use
  <ConcordionExtensions>
    <Extension assembly="Concordion.Spec" type="Concordion.Spec.Concordion.Extension.Command.CommandExtension" />
  </ConcordionExtensions>
  -->
  
</Specification>
